{
	"manifest_version": 2,
	"name": "Miqueliana",
	"description": "Copy selection as Markdown",
	"version": "0.2.0",
	"permissions": ["clipboardWrite"],
	"background": {
		"scripts": ["miqueliana_background.js"]
	},
	"browser_action": {
		"default_title": "Copy selection as Markdown",
		"default_icon": "icon_gray.png"
	},
	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"js": ["miqueliana_content.js"]
		}
	],
	"commands": {
		"copy-markdown": {
			"description": "Copy selection as Markdown",
			"suggested_key": {
				"default": "Alt+Shift+M"
			}
		}
	}
}
