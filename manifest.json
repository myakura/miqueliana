{
	"manifest_version": 2,
	"name": "Miqueliana",
	"version": "0.0.56",
	"permissions": [
		"clipboardWrite"
	],
	"background": {
		"scripts": ["miqueliana_background.js"]
	},
  "browser_action": {
    "default_title": "Copy selection as Markdown",
    "default_icon": "icon.png"
  },
	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"js": ["miqueliana_content.js"]
		}
	],
	"commands": {
		"copy-markdown": {
			"description": "Copy selection as Markdown",
			"suggested_key": {
				"default": "Alt+Shift+M"
			}
		}
	}
}
